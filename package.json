{
  "name": "pdp",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "ruler:apply": "npx @intellectronica/ruler@latest apply --local-only --no-backup",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "prebuild": "npm run check-types",
    "validate": "npm run check-types && npm run check",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @pdp/backend dev",
    "dev:setup": "turbo -F @pdp/backend dev:setup"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "turbo": "^2.5.4",
    "ultracite": "6.3.6"
  },
  "packageManager": "npm@11.6.2"
}
