{
  "name": "pdp",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "ruler:apply": "npx @intellectronica/ruler@latest apply --local-only --no-backup",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "validate": "npm run check-types && npm run check",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @pdp/backend dev",
    "dev:setup": "turbo -F @pdp/backend dev:setup",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "convex": "^1.31.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.5.4",
    "ultracite": "6.3.6"
  },
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "framer-motion": "^12.29.2",
    "libphonenumber-js": "^1.12.36",
    "react-hotkeys-hook": "^5.2.3",
    "react-masonry-css": "^1.0.16",
    "react-phone-number-input": "^3.4.14"
  }
}
